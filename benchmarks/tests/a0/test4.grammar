traversal fuse {
    case Group {
        iterate Content { recur Content; }
        ??;
    }
}
interface Element {
    output Width : int;
    input isLeaf : bool;
}
class Group : Element {
    children {
        Content : [Element];
    }
    rules {
        self.Width := 
            if self.isLeaf then
                0
            else
                [0]{Content.Width : 0};
    }
}