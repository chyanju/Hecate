traversal fuse {
    case Group {
        iterate Content { recur Content; }
        ??;
    }
}
interface Element {
    output Width : int;
    input isContent : bool;
    input contentWidth : int;
}
class Group : Element {
    children {
        Content : Element;
    }
    rules {
        self.Width :=
            if self.isContent then
                self.contentWidth
            else
                Content.Width;
    }
}