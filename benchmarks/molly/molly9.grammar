traversal fusion {
    case Inner {
        recur lk;
        recur rk;
        ??;
    }
    case Leaf {
        ??;
    }
}

interface Node {
    input pie : int;
    output puff : int;
}
class Inner : Node {
    children {
        lk : Node;
        rk : Node;
    }
    rules {
        self.puff := self.pie;
    }
}
class Leaf : Node {
    children {}
    rules {
        self.puff := self.pie;
    }
}




















