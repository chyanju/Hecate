traversal fusion {
    case Inner {
        recur lk;
        recur rk;
        ??;
    }
    case Leaf {
        ??;
    }
}

interface Node {
    output puff : int;
}
class Inner : Node {
    children {
        lk : Node;
        rk : Node;
    }
    rules {
        self.puff := default();
    }
}
class Leaf : Node {
    children {}
    rules {
        self.puff := default();
    }
}




















